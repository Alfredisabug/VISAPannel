<Page x:Class="VISAPannel.Page.about"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VISAPannel.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="about">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"></Setter>
            <Setter Property="FontFamily" Value="Arial"></Setter>
        </Style>
    </Page.Resources>

    <StackPanel Margin="30">
        <Border BorderBrush="Black" BorderThickness="2" Margin="10" Padding="5">
            <StackPanel>
                <TextBlock Text="Author: Alfred Wu"></TextBlock>
                <TextBlock Text="Last update time: 20200515"></TextBlock>
                <TextBlock Text="version: 1.0.0"></TextBlock>
            </StackPanel>
        </Border>

        <Grid Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"  Content="Back" DockPanel.Dock="Bottom" Click="Button_Click"></Button>
        </Grid>

    </StackPanel>

</Page>
